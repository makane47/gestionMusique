{% extends 'base.html.twig' %}

{% block title %}Fiche artiste{% endblock %}

{% block body %}

<h1 class="pt-2 text-center">Fiche de l'artiste</h1>
<hr>

<div class="row pt-2">


    {% set nbAlbums = leArtiste.albums|length %}

    <div class="card mb-3">
  <h3 class="card-header" style="color:#2fa4e7;">{{ leArtiste.nom }}</h3>

<div class="row">
  <div class="col-3 d-flex align-items-center mx-auto">
        <img class="avatar mx-auto d-block " src=" {{leArtiste.image}} " alt="Image des artistes"  style="width: 200px; height=auto" >
  </div>
  <div class="col">
          <div class="card-body">
                <h5 class="card-title">
                <a href="" class="badge badge-success" style="background:#2dad3a"> {{nbAlbums}} {% if nbAlbums> 1  %} albums {% else %} album{% endif %}</a>
                </h5>

          </div>


          <div class="card-body">
            <p class="card-text">{{ leArtiste.description|raw }}...</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">{% if  leArtiste.type == 0 %} Artiste solo {% else %} Groupe {% endif %}</li>
            <li class="list-group-item"><a href=" {{ leArtiste.site }} " target="_blank" rel="noopener noreferrer"> {{ leArtiste.site }} </a></li>

          </ul>
  
  </div>

</div>

</div>
</div>






<table class="table table-hover mx-auto">
  <thead>
    <tr>
      <th scope="col-3">Photo</th>
      <th scope="col-4">Nom</th>
      <th scope="col-1">Date</th>
      <th scope="col-3">Styles</th>
      <th scope="col-1">Morceaux</th>
    </tr>
  </thead>
  <tbody>

{% for leAlbum in leArtiste.albums %}
    <tr>
      <td><img class="miniature" src=" {{leAlbum.image}} " alt=""></td>
      <td scope="row"><a href=" {{ path('ficheAlbum', {'id': leAlbum.id} ) }} "> {{leAlbum.nom}}</a></td>
      <td>{{leAlbum.date}} </td>
      <td>Column </td>
      <td>{{leAlbum.morceaux|length}} </td>
    </tr>
 {% endfor %}   

  </tbody>
</table>


{% endblock %}
